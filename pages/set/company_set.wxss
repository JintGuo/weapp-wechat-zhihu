.page-header{
  position: absolute;
  top: 3%;
  left: calc(85% - 0rpx);
}
.save{
  line-height: 20px;
  font-size: 16px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #45587A;
  display: inline;
  font-weight:800;
  float: right;
  padding-right: 22px;
}

.page__title
{
  width: 240px;
  height: 33px;
  font-size: 24px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #242323;
  line-height: 33px;
}

.cover-view-info
{
  position: absolute;
  top: 9%;
  left: calc(25% - 140rpx);
}

.page__title2{
  font-size: 18px;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
