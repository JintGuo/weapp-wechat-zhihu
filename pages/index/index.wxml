<view>
    <view>
        <map id="map" scale="9" bindcontroltap="controltap" markers="{{markers}}"
            bindmarkertap="markertap" bindregionchange="regionchange" show-location
            style="width: 100%; height: 580px;"></map>
    </view>
    <cover-view class="cover-view">
        <cover-view>
            <cover-view class="flex-wrp" style="flex-direction:row;">
                <cover-view class="flex-item demo-text-1">
                    <input focus="True" placeholder="我是搜索框" />
                </cover-view>
                <cover-view class="flex-item demo-text-2">
                    <button>客户列表按键</button>
                </cover-view>
            </cover-view>
        </cover-view>
    </cover-view>

    <cover-view class="cover-view-info">
        <button>未打卡提示框，点击补充打卡</button>
    </cover-view>
    
    <cover-view class="cover-view-pos">
        <icon type="success" />
    </cover-view>

</view>