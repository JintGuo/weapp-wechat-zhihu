/**index.wxss**/

.container{
  height: 1500rpx;
}
.container .search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}
.container .search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.cover-view {
  position: absolute;
  top: 7%;
  left: calc(45% - 300rpx);
  /* opacity: .7; */
}

.cover-view-info {
  position: absolute;
  bottom: 5%;
  left: calc(45% - 300rpx);
  /* opacity: .7; */
  width: 70%;
  height: 36px;
  background: rgba(255, 255, 255, 0.8);
  box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.06);
  border-radius: 21px;
}
.cover-view-info-button{
  font-size: 14px;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #242323;
  line-height: 38px;
  height: 38px;
  text-align: left;
}


.cover-view-pos {
  position: absolute;
  bottom: 5%;
  right: 9%;
  /* opacity: .7; */
  width: 36px;
  height: 36px;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.15);
  border-radius: 21px;

}
.cover-view-pos image{
  width: 26px;height: 26px; margin-left:5px;margin-top:5px;
}

.flex-wrp{
  display:flex;
}

.flex-item{
  width: 200rpx;
  height: 50rpx;
  font-size: 26rpx;
}

.demo-text-1 {
  /* background: rgba(26, 173, 25, 0.7); */
  width: 265px;
  height: 42px;
  line-height:42px;
  background: #FFFFFF;
  box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.15);
  border-radius: 4px;
}
.demo-text-1 image{
  width:18px;height:18px; float:left; padding-left:8px;padding-top:12px;
}
.search-box{
  text-align: left;
  height: 42px;
  line-height: 42px;
  padding-left: 10px;
}


.demo-text-2 {
  /* background: rgba(39, 130, 215, 0.7); */
  width: 72px;
  height: 42px;
  background: linear-gradient(123deg, #2C599A 0%, #274674 34%, #3B3A78 73%, #3C6CC2 100%);
  border-radius: 0px 4px 4px 0px;
  font-size: 14px;
  font-family: PingFangSC-Light, PingFang SC;
  font-weight: 300;
  color: #FFFFFF;
  line-height: 42px;
}
.demo-text-2 image{
  width:18px;height:18px; float:left; padding-left:8px;padding-top:12px;
}

.demo-text-3 {
  background: rgba(255, 255, 255, 0.7);
}

